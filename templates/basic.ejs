<div class = "center-align">
	<h4>Concursos</h4>
</div>

<ul class = "collection">
	<% var icons = [null, 'looks_one', 'looks_two', 'looks_3']; %>
	<% for(var i = 0; i < contests.length; i++) {
		var contest = contests[i];
	    var prizes = [null, contest.prize1, contest.prize2, contest.prize3];
	    var totalPrizes = 0;
		for (var j = 0; j < prizes.length; j++)
			if (prizes[j] != null) totalPrizes++;
	%>
    <li class = "collection-item">
		<span class = "title"><b><%=  contest.title %></b></span>
		<p>
			<% if (totalPrizes > 0) { %>
					Premio<% if (totalPrizes > 1) {%>s<% } %>:
					<% for (var k = 1; k < totalPrizes + 1; k++) { %>
						<% if (prizes[k] != null) {%>
							<i class = "tiny material-icons">
								<%= icons[k] %>
							</i>
							<%= prizes[k] %>
						<% } %>
					<% } %>
					<br>
			<% } %>
			Cierra el <%= contest.end_date %>
		</p>
		<div class = "center-align">
			<button class = "btn-small"
					onclick = "apretaste.send({
							command: 'CONCURSO VER',
							data:{
								id: contests[<%= j %>].id
							}});">
				Mas informaci√≥n
				<i class = "material-icons right">info</i>
			</button>
		</div>
	</li>
	<% } %>
</ul>

<% if (winners) {%>
	<div class = "center-align">
		<button class = "btn green"
				onclick = "apretaste.send({
					command: 'CONCURSO GANADORES'
				});">
			Ganadores
		</button>
	</div>
<% } %>