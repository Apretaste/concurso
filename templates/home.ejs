<div class="row">
	<div class="col s12">
		<h1>Concursos</h1>
	</div>
</div>

<div class="row">
	<% contests.forEach((contest) => { %>
	<div class="col s12 m6 l4">
		<div class="card blue-grey darken-1">
			<div class="card-content white-text">
				<span class="card-title"><%= contest.title.firstUpper() %></span>
				<span class="lime-text">
					<% if(contest.prize1) { %>
						<i class="tiny material-icons">looks_one</i> <%= contest.prize1 %>
					<% } %>
					<% if(contest.prize2) { %>
						<i class="tiny material-icons left-space">looks_two</i><%= contest.prize2 %>
					<%  }%>
					<% if(contest.prize3) { %>
						<i class="tiny material-icons left-space">looks_3</i><%= contest.prize3 %>
					<% } %>
				</span>
				<p>Cierra el <%= formatDateTime(contest.end_date) %></p>
			</div>
			<div class="card-action">
				<a href="#!" onclick="apretaste.send({'command':'CONCURSO VER','data':{'id':'<%= contest.id %>'}})">Ver m√°s</a>
			</div>
		</div>
	</div>
	<% }) %>
</div>

<!-- LIST OF WINNERS -->
<div class="fixed-action-btn">
	<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="apretaste.send({'command':'CONCURSO GANADORES'})"><i class="material-icons">local_play</i></a>
</div>